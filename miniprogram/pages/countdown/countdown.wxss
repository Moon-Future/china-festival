@font-face {
  font-family: 'Number';
  src: url('https://chinafestival-1255423800.cos.ap-guangzhou.myqcloud.com/font/Number-01.ttf');
}

@font-face {
  font-family: 'QcKaiTi';
  src: url('https://chinafestival-1255423800.cos.ap-guangzhou.myqcloud.com/font/QcKaiTi.ttf');
}

.canvas-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.canvas-wrapper {
  position: fixed;
  z-index: 5000;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  flex-flow: column;
  align-items: center;
}
.canvas-btn {
  width: 90%;
  margin-top: 20rpx;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
}
.canvas-save, .canvas-cancel {
  border-radius: 50rpx;
  text-align: center;
  background: #fe9801;
  width: 300rpx;
}
.canvas-cancel {
  background: #fa163f;
  margin-left: 20rpx;
}

.time-wrapper {
  width: 90%;
  margin: auto;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
}
.icon-share {
  font-size: 80rpx;
  color: #e04dff;
}
.countdown-card {
  width: 95%;
  margin: auto;
  /* border: 1px solid; */
  border-radius: 10px;
  position: fixed;
  top: 100rpx;
  bottom: 120rpx;
  left: 0;
  right: 0;
  font-family: QcKaiTi;
  display: flex;
  flex-flow: column;
  justify-content: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  color: #fff;
}
.date-wrapper {
  display: flex;
  justify-content: center;
  font-size: 40rpx;
}
.str {
  margin: auto 0;
}
.sun-date {
  font-size: 60rpx;
  margin-left: 20rpx;
}
.lunar {
  text-align: center;
  font-size: 50rpx;
  padding: 20rpx 0;
}
.festival-wrapper {
  margin: 50rpx 0;
  text-align: center;
  font-size: 120rpx;
  /* color: #fff; */
  height: 200rpx;
  /* line-height: 200rpx; */
}
.festival-img {
  height: 64px;
}
.past-str {
  text-align: center;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-right: 60rpx;
}
.restday-num {
  font-size: 110rpx;
  margin: 10rpx 0;
  padding: 0 20rpx 0 50rpx;
  margin-bottom: -5px;
}
.countdown {
  display: flex;
  justify-content: space-around;
  font-size: 50rpx;
}
.countdown-item {
  display: flex;
  flex-flow: column;
  text-align: center;
  font-size: 90rpx;
  width: 25%;
}
.countdown-time {
  margin-top: 10rpx;
  font-size: 36rpx;
  display: block;
}
.number {
  font-family: Number;
}
.remark-wrapper {
  position: absolute;
  bottom: 50rpx;
  display: flex;
  color: #fff;
}
.remark {
  width: 95%;
  margin: auto;
}