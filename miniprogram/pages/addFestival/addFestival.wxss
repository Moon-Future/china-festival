.form-item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.form-title {
  color: #8785a2;
}
.form-inp {
  background: #fff;
}
.form-textarea {
  width: 100%;
  height: 250rpx;
  line-height: initial;
  background: #fff;
  padding: 10rpx 0 0 20rpx;
  box-sizing: border-box;
}
.color-wrapper {
  display: flex;
  padding: 0 20rpx;
}
.color-item {
  width: 50rpx;
  height: 50rpx;
  border: 1px solid;
  border-radius: 4px;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.color-item-active {
  border-color: red;
}
.form-upload {
  display: flex;
  justify-content: center;
  background: #fff;
  align-items: center;
  height: 200rpx;
}
.form-upload-img {
  width: 95%;
  margin: auto;
}
.icon-del { 
  margin-left: 20rpx;
  color: red;
}
.icon-add {
  font-size: 100rpx;
  color: #ddd;
}
.submit {
  width: 100% !important;
  margin-top: 20rpx;
}