/* components/month/month.wxss */
@import "../../style/iconfont.wxss";
.date-wrapper {
  width: 90%;
  margin: auto;
}
.year-month {
  width: 100%;
  background: #da5651;
  border-radius: 10px;
  color: #fff;
}
.picker-wrapper {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #fff;
}
.time {
  margin-right: 20rpx;
}
.date {
  height: 200rpx;
  display: flex;
  justify-content: space-between;
}
.date-time {
  display: flex;
}
.date-day {
  width: 180rpx;
  text-align: center;
  margin: 0 10rpx;
  font-size: 150rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
}
.date-week {
  width: 250rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  font-size: 30rpx;
}
.animal {
  display: flex;
  flex-flow: column;
  justify-content: center;
  font-size: 80rpx;
}
.animal-img {
  width: 48px;
  height: 48px;
}
.date-now {
  display: flex;
  flex-flow: column;
  justify-content: center;
  margin-right: 20rpx;
  text-align: center;
}
.data-now-text {
  border: 1px solid #fff;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-top: 5rpx;
}
.icon-loudou {
  font-size: 50rpx;
  margin: 10rpx;
}
.icon-memory {
  font-size: 50rpx;
  width: initial !important;
  padding: initial !important;
  font-weight: initial !important;
  color: #fff !important;
  min-height: initial !important;
}
.week {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.day {
  display: flex;
  flex-flow: column;
  height: 650rpx;
}
.day-row {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
}
.week-item, .day-col {
  width: 80rpx;
  padding: 10rpx;
  text-align: center;
  border-radius: 4px;
}
.day-col {
  display: flex;
  flex-flow: column;
  font-weight: bold;
}
.day-col-festival {
  color: red;
}
.day-col-active {
  background: #da5651;
  color: #fff;
}
.other-month {
  color: #c9d1d3;
}
.day-col-lunar {
  width: 100%;
  font-size: 22rpx;
  font-weight: initial;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.festival-color {
  color: #ffd369;
}
.hide-swiper {
  background: #eee;
}
